@import nib
@import common

/* ----------------------------------------------------------------------------
 * Base
 */

body, input, td, th, textarea
  font-family: proxima-font
  font-size: 11pt
  line-height: 1.5
  color: #444

a
  color: turquoise
  text-decoration: none

.amp
  opacity: 0.7
  font-style: italic
  font-family: baskerville, palatino, georgia, serif
  font-weight: normal

/* ----------------------------------------------------------------------------
 * Nav
 */

.navigation
  fixed: left 0 top -20px
  z-index: 100
  width: 100%

  box-sizing: border-box

  padding: 0 20px
  padding-top: 20px

  transition: box-shadow 300ms ease, background-color 300ms ease, transform 300ms ease

  &
    background-color: rgba(lighten(cream, 50%), 0.01)
  &:not(.stuck)
    transform: translate(0, 20px)

  &.stuck
    box-shadow: 0 0 3px rgba(black, 0.1), inset 0 -1px 0 rgba(black, 0.2)
    background-color: rgba(lighten(cream, 50%), 0.95)

  // Menu items
  ul
    display: block
    float: left

  li
    display: inline

  a
    display: block
    line-height: 52px
    height: 52px
    float: left

    text-transform: uppercase
    font-weight: bold
    padding: 0 15px

    antialias()

    text-shadow: 0 0 2px cream, 0 0 2px cream

    background-color: rgba(ochre, 0.0)
    transition: background-color 300ms linear

  a:hover
    background-color: rgba(lime, 0.2)
    transition: none

  a.active
    background-color: rgba(ochre, 0.1)

  a[href='#speakers']
    color: lime
  a[href='#tickets']
    color: scarlet
  a[href='#about']
    color: ochre

  a.home
    background: scarlet
    color: white
    overflow: hidden

    padding: 0
    text-align: center
    transition: width 300ms ease, padding 300ms ease

  a.home:hover
    background: #444

  & a.home
    width: 0
    padding: 0

  &.stuck a.home
    width: 60px

  .in
    width: 980px
    margin: 0 auto
    clearfix()

  .share
    float: right
    margin-top: 4px
    height: 22px
    padding: 10px

    transition: all 300ms ease

  &:not(.stuck) .share,
  &:not(.stuck) ul
    background: rgba(lighten(cream, 50%), 0.95)
    border-radius: 2px
    box-shadow: 0 2px 1px rgba(black, 0.1)

  .share iframe
    vertical-align: top

/* ----------------------------------------------------------------------------
 * IE7 banner
 */

.unsupported-browser
  padding: 20px
  background: ochre

  color: white
  text-shadow: 0 1px 0 rgba(black, 0.3)

  text-align: center

  strong
    font-weight: bold
    font-size: 1.1em

  a
    background-color: lime
    color: white
    padding: 3px 10px
    border-radius: 2px
    margin-left: 10px

/* ----------------------------------------------------------------------------
 * Section base
 */

.section
  position: relative
  overflow: hidden
  width: 100%

  .header
    text-align: center
    margin: 50px 0
    font-size: 36pt

    font-family: adelle-font
    font-weight: 900

    position: relative
    z-index: 5

/* ----------------------------------------------------------------------------
 * Title
 */

.section.title
  &
    background: cream
    border-bottom: solid 4px ochre

  // Right ornament
  .o-right
    absolute: right 0 bottom 10px
    width: 669px
    height: 748px
    transition: all 300ms ease
    z-index: 1

  .o-left
    absolute: left 0 bottom 10px
    width: 708px
    height: 748px
    transition: all 300ms ease
    z-index: 2

  // Logo image
  .logo
    margin: 170px auto 40px auto
    text-align: center

    position: relative
    z-index: 5

  .logo img
    width: 639px
    height: 220px

  // PICC hall, etc
  .info
    margin: 40px auto 180px auto
    font-size: 16pt
    text-transform: uppercase
    font-weight: bold

    position: relative
    z-index: 4

  .info > *
    text-align: center

  .time
    color: turquoise

  .venue
    color: ochre
    margin-bottom: 10px

  .address
    font-size: 12pt

  .address.one
    color: scarlet

  .address.two
    color: green

  // Road ornament at the bottom
  .o-road
    image: 'title-road.png'
    height: 22px
    width: 100%

    position: relative
    z-index: 5

  // Mobile
  @media (max-width: 1250px)
    .o-right
      right: -50px
    .o-left
      left: -50px
  @media (max-width: 1050px)
    .o-right
      right: -150px
    .o-left
      left: -250px
  @media (max-width: 800px)
    .o-right
      right: -450px

  @media (max-width: 600px)
    .o-left
      left: -1000px
    .o-right
      right: 0
      opacity: 0.1

    .logo
      margin: 40px auto 20px auto
      width: 90%

    .logo img
      width: 100%
      height: auto

    .info
      margin: 20px auto 40px auto

    .o-road
      height: 11px
      background-size: (470px / 2) 11px

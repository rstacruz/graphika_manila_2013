/* ----------------------------------------------------------------------------
 * Call to action
 */

.section.cta
  background: ochre
  box-shadow: inset 0 -4px 0 rgba(white, 0.4)
  color: white
  text-shadow: 0 1px 1px rgba(black, 0.2)

  padding: 150px 0 0 0
  text-align: center

  overflow: visible

  btn-size = 150px

  .in
    max-width: 960px
    margin: 0 auto
    clearfix()

  .left
    max-width: 600px
    text-align: center
    margin: 0 auto

  .body
    font-size: 14pt

  .body h3
    font-family: adelle-font
    font-weight: 900
    font-size: 26pt

  .right
    padding-top: 30px
    margin: 0 auto

    margin-bottom: (-1 * btn-size / 2)

  .btn
    display: block
    margin: 0 auto

    font-size: 12pt
    font-weight: bold
    text-align: center

    background: scarlet
    border-radius: 4px
    color: white

    width: btn-size
    height: btn-size
    border-radius: (btn-size / 2)
    line-height: btn-size

    position: relative
    z-index: 10

    box-shadow: 0 0 0 1px rgba(black, 0.04), 0 0 0 4px rgba(black, 0.04), inset 0 0 0 4px rgba(cream, 0.8)

    transition: transform 100ms ease

  .btn:hover
    transform: scale(1.1)

  .btn span
    display: inline-block
    width: 110px
    line-height: 18pt
    vertical-align: middle

    b
      display: block
      font-size: 1.8em
      text-transform: uppercase


@import nib
@import common

/* ----------------------------------------------------------------------------
 * About
 */

.section.about
  background: #93c8be
  padding-bottom: 50px
  .header
    color: white

  .pullquote
    background: #93c8be

/* ----------------------------------------------------------------------------
 * Call to action
 */

.section.cta
  background: ecru
  box-shadow: inset 0 -4px 0 ochre
  color: white
  text-shadow: 0 1px 1px rgba(black, 0.2)
  border-top: solid 4px ochre

  padding: 150px 0 0 0
  text-align: center

  overflow: visible

  z-index: 2

  btn-size = 150px

  .in
    max-width: 960px
    margin: 0 auto
    clearfix()

  .left
    max-width: 600px
    text-align: center
    margin: 0 auto

  .body
    font-size: 14pt

  .body h3
    font-family: adelle-font
    font-weight: 900
    font-size: 26pt

  .right
    padding-top: 30px
    margin: 0 auto

    margin-bottom: (-1 * btn-size / 2)

  .btn
    display: block
    margin: 0 auto

    font-size: 12pt
    font-weight: bold
    text-align: center

    background: scarlet
    border-radius: 4px
    color: white

    width: btn-size
    height: btn-size
    border-radius: (btn-size / 2)
    line-height: btn-size

    position: relative
    z-index: 10

    box-shadow: 0 0 0 1px rgba(black, 0.04), 0 0 0 4px rgba(black, 0.04), inset 0 0 0 4px rgba(cream, 0.8)

    transition: transform 100ms ease

  .btn:hover
    transform: scale(1.1)

  .btn span
    display: inline-block
    width: 110px
    line-height: 18pt
    vertical-align: middle

    b
      display: block
      font-size: 1.8em
      text-transform: uppercase

/* ----------------------------------------------------------------------------
 */

.body
  width: 400px
  margin: 0 auto
  line-height: 1.6

  p, ul, ol
    margin-top: 20px

  > :first-child
    margin-top: 0

  > p:first-child:first-line
    font-weight: bold
    font-size: 1.1em

  > p:first-child:first-letter
    font-family: adelle-font
    font-weight: 900

    font-size: 3em
    float: left
    margin: 0 5px 0 -10px
    line-height: 1

  .pullquote
    width: 260px
    float: right
    font-size: 14pt
    font-family: adelle-font
    font-weight: 400

    margin: 0 -150px 0 20px

    color: darken(turquoise, 20%)
    padding: 20px

    position: relative
    z-index: 1

    &:first-line
      font-weight: 900

  strong
    font-weight: bold

  /* Mobile: Hide pullquote */
  @media (max-width: 600px)
    &
      width: auto
      padding: 0 20px

    .pullquote
      display: none


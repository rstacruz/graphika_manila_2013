// Colors
cream     = #fdefe1
scarlet   = #ec553f
turquoise = #1e908c
ochre     = #e5a141
lime      = #bcc58e
ecru      = #d2b69e

// Lesser-used colors
cadmium = #eac859  // For venue
seafoam = #e9eee0  // For tickets

// Fonts
adelle-font  = adelle, sans-serif
proxima-font = proxima-nova-alt, proxima-nova, proxima nova, sans-serif

// -----

antialias()
  -webkit-font-smoothing: antialiased !important
  text-rendering: optimizeLegibility !important

// -----

button-color(fg = scarlet, insetwidth = 4px)
  display: inline-block

  background: fg
  color: white
  text-shadow: 0 1px 1px rgba(black, 0.4)
  box-shadow: inset 0 0 0 1px rgba(black, 0.2), 0 0 0 insetwidth rgba(black, 0.2)
  border-radius: 2px

  &:hover
    background: linear-gradient(top, lighten(fg, 25%), fg)
    box-shadow: inset 0 0 0 1px rgba(black, 0.2), 0 0 0 insetwidth rgba(black, 0.2), inset 0 2px rgba(white, 0.2)

  &:active
    background: darken(fg, 5%)
    box-shadow: inset 0 0 0 1px rgba(black, 0.2), 0 0 0 insetwidth rgba(black, 0.2), inset 3px 3px 3px rgba(black, 0.2)

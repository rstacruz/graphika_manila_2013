@import nib
@import common

// ----------------------------------------------------------------------------

body, input, td, th, textarea
  font-family: proxima-font
  font-size: 11pt
  line-height: 1.5
  color: #444

a
  color: turquoise
  text-decoration: none

// ----------------------------------------------------------------------------

.unsupported-browser
  padding: 20px
  background: ochre

  color: white
  text-shadow: 0 1px 0 rgba(black, 0.3)

  text-align: center

  strong
    font-weight: bold
    font-size: 1.1em

  a
    background-color: lime
    color: white
    padding: 3px 10px
    border-radius: 2px
    margin-left: 10px

// ----------------------------------------------------------------------------

.section
  position: relative
  overflow: hidden
  width: 100%

  .header
    text-align: center
    margin: 50px 0
    font-size: 36pt

    font-family: adelle-font
    font-weight: 900

    position: relative
    z-index: 5

// ----------------------------------------------------------------------------

.section.title
  &
    background: cream

  // Right ornament
  .o-right
    absolute: right 0 bottom 10px
    width: 669px
    height: 748px
    transition: all 300ms ease
    z-index: 1

  .o-left
    absolute: left 0 bottom 10px
    width: 708px
    height: 748px
    transition: all 300ms ease
    z-index: 2

  // Logo image
  .logo
    margin: 170px auto 40px auto
    text-align: center

    position: relative
    z-index: 5

  .logo img
    width: 639px
    height: 220px

  // PICC hall, etc
  .info
    margin: 40px auto 180px auto
    font-size: 16pt
    text-transform: uppercase
    font-weight: bold

    position: relative
    z-index: 4

  .info > *
    text-align: center

  .time
    color: turquoise

  .venue
    color: ochre
    margin-bottom: 10px

  .address
    font-size: 12pt

  .address.one
    color: scarlet

  .address.two
    color: green

  // Road ornament at the bottom
  .o-road
    image: 'title-road.png'
    height: 22px
    width: 100%

    position: relative
    z-index: 5

  // Mobile
  @media (max-width: 1250px)
    .o-right
      right: -50px
    .o-left
      left: -50px
  @media (max-width: 1050px)
    .o-right
      right: -150px
    .o-left
      left: -250px
  @media (max-width: 800px)
    .o-right
      right: -450px

  @media (max-width: 600px)
    .o-left
      left: -1000px
    .o-right
      right: 0
      opacity: 0.1

    .logo
      margin: 40px auto 20px auto
      width: 90%

    .logo img
      width: 100%
      height: auto

    .info
      margin: 20px auto 40px auto

    .o-road
      height: 11px
      background-size: (470px / 2) 11px

// ----------------------------------------------------------------------------

.section.speakers
  background: turquoise url(speakers-bg.jpg)
  color: white

  padding-bottom: 40px

  // Header
  .header
    color: turquoise

  .o-waves
    background: url(speakers-waves.jpg) center top
    background-repeat: repeat-x

    absolute: left 0 top 0
    width: 100%
    height: 353px

    z-index: 0

  .o-floaters
    image: 'speakers-floaters.png' 1167px 230px
    background-repeat: no-repeat
    background-position: center top

    absolute: left -95px top 120px
    width: 100%
    height: 230px

    z-index: 0

.speakers-list
  &
    clearfix()

    margin: 80px auto 0 auto

    position: relative

  // Desktop
  @media (min-width: 980px)
    &
      width: 980px
      padding-top: 120px
      padding-bottom: 120px

    .speaker.left
      float: left
      clear: both

    .speaker.right
      margin-top: 70px
      float: right

    .o-hook
      display: block

      width: 4px
      margin-left: -2px
      border-radius: 4px

      absolute: left 50% top 19px
      bottom: 0

      background: cream

    .speaker:after
      content: ''
      display: block

      height: 4px
      width: 50px

      position: absolute
      bottom: 80px
      z-index: 0

      opacity: 0.5

    .speaker.left:after
      right: -20px
      background: linear-gradient(left, rgba(cream, 0), cream)

    .speaker.right:after
      left: -20px
      background: linear-gradient(right, rgba(cream, 0), cream)


  // Mobile
  @media (max-width: 980px)
    &
      padding-top: 70px

    .speaker
      display: block
      margin: 20px auto

// Each individual speaker
.speaker
  display: block
  position: relative

  padding: 10px

  &, .front, .back, .hero
    width: 450px
    height: 270px

  .front, .back, .hero
    box-sizing: border-box

  background: rgba(black, 0.1)
  border-radius: 1px
  box-shadow: inset 2px 2px 2px rgba(black, 0.1)

  // Transition stuff
  &
    perspective: 2000px

  .front, .back
    position: absolute
    top: 10px
    left: 10px
    z-index: 1

    transition: transform 200ms ease
    backface-visibility: hidden

  &
    .back
      transform: rotateX(-180deg)

  &:hover, &.active
    .front
      transform: rotateX(180deg)

    .back
      transform: rotateX(0)

  // Back face
  .back
    background: lighten(lime, 10%)
    padding: 20px 40px
    color: #222
    text-shadow: 0 1px 0 rgba(white, 0.3)

    text-align: center
    font-size: 11pt

    .heading
      color: white
      text-shadow: 0 1px 0 rgba(black, 0.2)
      font-size: 22pt

      font-family: adelle-font
      font-weight: 900

      line-height: 1.3
      padding-bottom: 10px
      margin-bottom: 15px

      border-bottom: solid 1px rgba(black, 0.1)
      box-shadow: 0 1px 0 rgba(white, 0.2)

  // Front card's meta thing
  .meta
    position: absolute
    z-index: 1

    background: white
    padding: 10px 30px 10px 10px

    bottom: 20px
    right: 20px

    text-transform: uppercase
    color: #444
    font-weight: bold
    line-height: 1.4
    font-size: 10pt

  .meta h3
    font-family: adelle-font
    font-size: 18pt
    color: scarlet
    font-weight: 900

    text-transform: none
    margin-bottom: 4px

  .name
    color: ochre
  .location
    color: turquoise
  .discipline
    color: lime

  &.right .meta
    right: auto
    left: 20px

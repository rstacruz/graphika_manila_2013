@import nib
@import common

/* ----------------------------------------------------------------------------
 * Call to action
 */

.section.cta
  background: #e1efe1 url(cta-backdrop.jpg) center bottom repeat-x
  box-shadow: inset 0 -4px 0 ochre
  color: darken(turquoise, 30%)
  text-shadow: 0 1px 1px rgba(white, 0.3)
  border-top: solid 4px ochre

  padding: 50px 0 0 0
  text-align: center

  overflow: visible

  z-index: 2

  btn-size = 150px

  .in
    max-width: 960px
    margin: 0 auto
    clearfix()

  .left
    max-width: 600px
    text-align: center
    margin: 0 auto

  .body
    font-size: 14pt

  .body h3
    font-family: adelle-font
    font-weight: 900
    font-size: 26pt
    color: scarlet

  .right
    padding-top: 30px
    margin: 0 auto

    margin-bottom: (-1 * btn-size / 2)

  .btn
    display: block
    margin: 0 auto

    font-size: 12pt
    font-weight: bold
    text-align: center

    background: scarlet
    border-radius: 4px
    color: white

    width: btn-size
    height: btn-size
    border-radius: (btn-size / 2)
    line-height: btn-size

    position: relative
    z-index: 10

    box-shadow: 0 0 0 1px rgba(black, 0.04), 0 0 0 4px rgba(black, 0.04), inset 0 0 0 4px rgba(cream, 0.8)

    transition: transform 100ms ease

  .btn:hover
    transform: scale(1.1)
    background: darken(scarlet, 10%)

  .btn span
    display: inline-block
    width: 110px
    line-height: 18pt
    vertical-align: middle
    text-shadow: 0 1px 1px rgba(black, 0.2)

    b
      font-size: 2.1em
      text-transform: uppercase
      font-family: proxima-font
      letter-spacing: 2px

      border-top: solid 1px rgba(white, 0.5)
      border-bottom: solid 1px rgba(white, 0.5)

    small
      display: block
      font-family: adelle-font
      font-weight: 900
      font-size: 0.9em
      color: lighten(scarlet, 70%)
      margin-top: 5px


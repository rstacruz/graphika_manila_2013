@import nib
@import common

/* ----------------------------------------------------------------------------
 * Base
 */

body, input, td, th, textarea
  font-family: proxima-font
  font-size: 11pt
  line-height: 1.5
  color: #444

a
  color: turquoise
  text-decoration: none

.amp
  opacity: 0.7
  font-style: italic
  font-family: baskerville, palatino, georgia, serif
  font-weight: normal

/* ----------------------------------------------------------------------------
 * IE7 banner
 */

.unsupported-browser
  padding: 20px
  background: ochre

  color: white
  text-shadow: 0 1px 0 rgba(black, 0.3)

  text-align: center

  strong
    font-weight: bold
    font-size: 1.1em

  a
    background-color: lime
    color: white
    padding: 3px 10px
    border-radius: 2px
    margin-left: 10px

/* ----------------------------------------------------------------------------
 * Section base
 */

.section
  position: relative
  overflow: hidden
  width: 100%
  z-index: 1
  background: cream

  .header
    text-align: center
    margin: 50px 0

    position: relative
    z-index: 5

  .header p.pre
    font-family: proxima-font
    font-weight: 700
    font-size: 12pt

    text-transform: uppercase
    letter-spacing: 1px 

    color: #444
    text-shadow: 0 1px 0 rgba(white, 0.3)

  .header p.pre span
    padding: 5px 0
    border-top: solid 1px rgba(white, 0.2)
    border-bottom: solid 1px rgba(white, 0.2)

  .header h2
    font-size: 36pt

    font-family: adelle-font
    font-weight: 900

  .header h2.larger
    font-size: 42pt


/* ----------------------------------------------------------------------------
 * Generic figure
 */

.figure
  &
    max-width: 980px
    margin: 0 auto

  .image,
  .image img
    width: 530px
    height: 300px

  @media (min-width: 600px)
    .image
      padding-top: 3px

  .image img
    background: rgba(black, 0.1)
    margin-bottom: 10px

  .body, .image
    float: left

  &.leftie
    .image
      margin-right: 40px

  &.rightie
    .body
      margin-right: 40px

  img.bordered
    width: 510px

    display: block
    background: cream
    padding: 10px
    box-shadow: 0 1px 1px rgba(black, 0.2)

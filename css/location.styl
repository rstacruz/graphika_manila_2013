@import nib
@import common

/* ----------------------------------------------------------------------------
 * Venue
 */

.section.venue
  &
    padding-top: 90px
  @media screen and (min-width: 600px)
    padding-bottom: 150px

  background: cadmium url(venue-bg.jpg)

  // Line
  &:before
    content: ''
    display: block

    absolute: left 0 top 0
    z-index: 2

    width: 100%
    height: 0
    border-top: dotted 3px cream

  // Ornament
  .o-beach
    absolute: left 0 top 0
    width: 100%
    height: 455px
    background: url(venue-beach.jpg) center 0 repeat-x
    box-shadow: inset 0 8px 5px -5px rgba(black, 0.1)

  .image
    height: auto

  .header
    color: white
    text-shadow: 0 1px 1px rgba(black, 0.2)

  // Align
  .figure
    margin-top: -20px

  a.highlight
    color: #444
    text-shadow: 0 1px 1px rgba(white, 0.3)

    background-color: rgba(#fafae0, 0.4)
    padding: 1px 4px
    border-radius: 1px
    box-shadow: 0 1px 1px rgba(black, 0.2)

    transition: background-color 100ms ease

    &:hover
      background-color: rgba(#fafae0, 0.9)

    &:active
      transition: none
      background-color: scarlet
      color: white
      text-shadow: 0 1px 1px rgba(black, 0.3)

  .image img.one
    height: 371px

  .body
    text-shadow: 0 1px 1px rgba(white, 0.4)

  .body, .image
    position: relative
    z-index: 1

/* List of benefits of the new location */
.location-benefits
  li
    padding-bottom: 20px

    font-weight: 400

  li strong
    color: darken(lime, 60%)
    display: block

    font-weight: 900
    font-family: adelle-font
    font-size: 1.3em

/* Hide CTA after the venue */
@media screen and (max-width: 600px)
  .section.venue + .gap
    display: none

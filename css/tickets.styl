@import nib
@import common

/* ----------------------------------------------------------------------------
 * Tickets
 */

.section.tickets
  background: #e9eee0
  text-shadow: 0 1px 0 rgba(white, 0.2)

  .header
    color: scarlet
    line-height: 1.3

  .header p
    font-size: 14pt
    color: #444
    font-family: proxima-font
    font-weight: 700

  /* Road ornament at the bottom */
  .o-road
    image: 'title-road.png'
    height: 22px
    width: 100%

    position: relative
    z-index: 5

    border-bottom: solid 3px ochre

.ticket-list
  &
    margin: 0 auto
    text-align: center

  // Mobile
  @media (max-width: 600px)
    .ticket
      margin: 30px auto 30px auto

  @media (min-width: 600px)
    .ticket
      margin: 20px 50px 10px 50px

  .ticket
    display: inline-block
    width: 250px
    height: 250px
    border-radius: 125px

    background: white
    box-shadow: 0 0 0 4px rgba(black, 0.05), 0 0 0 1px rgba(black, 0.05)
    text-align: center

    line-height: 1.4

    position: relative

    &:after
      content: ''
      display: block
      absolute: left 5px top 5px

      width: 236px
      height: 236px
      border-radius: 120px

      border: dotted 2px #ccc

    img
      width: (120px * 0.6)
      height: 120px
      margin-top: -40px
      background: cream
      margin-bottom: 15px

      position: relative
      z-index: 1

    h3
      font-weight: 700
      font-size: 18px
      text-transform: uppercase
      color: turquoise

    .price
      font-size: 32pt
      font-family: adelle-font
      font-weight: 400
      color: scarlet

      line-height: 1.1
      margin-bottom: 7px

      text-shadow: 1px 1px 0 white, 2px 2px 0 lighten(turquoise, 80%)

      &:before, &:after
        content: '\2219'
        opacity: 0.4
      &:before
        margin-right: 10px
      &:after
        margin-left: 10px

    &.student-pass
      .price
        color: darken(ecru, 20%)

    .type
      font-size: 9pt
      width: 160px
      margin: 3px auto 0 auto

    .type b
      font-weight: bold


/* Each pass contains: */
.pass-contents
  h3
    font-weight: 700
    font-family: adelle-font
    font-size: 1.3em
    color: turquoise
    text-align: center

  margin: 20px auto
  max-width: 800px
  line-height: 1.7

  ul
    font-size: 1.2em

  li
    padding: 6px 0
    font-weight: bold
    text-align: center

  span.free
    background: ochre
    color: white
    text-shadow: 0 1px 1px rgba(black, 0.3)
    text-transform: uppercase
    font-size: 0.8em
    padding: 2px 5px
    border-radius: 2px
    margin-left: 5px

    transform: rotate(15deg)

/* Important reminders: */
.pass-reminders
  position: relative

  &:after
    content: ''
    display: block
    absolute: top -3px left 0

    width: 100%
    height: 2px
    z-index: 5
    border-top: dotted 3px #e9eee0

  background: rgba(black, 0.05)
  padding: 40px 0
  margin-top: 30px

  .in
    margin: 0 auto
    max-width: 960px

    text-align: left
    line-height: 1.7
    font-size: 0.8em

  ul
    clearfix()

  li
    box-sizing: border-box
    padding: 0 10px

    display: block
    float: left
    width: 20%

    text-align: center

  @media (max-width: 600px)
    li
      float: none
      width: auto

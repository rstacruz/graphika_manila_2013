@import nib
@import common

.section.call-for-entries
  background: turquoise url(speakers-bg.jpg)
  color: lighten(turquoise, 70%)
  text-shadow: 0 1px 1px rgba(black, 0.3)

  box-shadow: inset 0 -8px 6px -6px rgba(black, 0.2)

  font-size: 0.9em
  line-height: 1.6

  position: relative
  z-index: 110

  &:after
    content: ''
    display: block

    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 0

    border-top: dotted 2px cream

  header
    text-align: center
    margin-bottom: 20px
    font-size: 2.2em
    line-height: 1.3

    font-weight: bold

  header h2 strong
    font-weight: normal
    text-transform: uppercase
    font-size: 0.6em

  header h2 span
    font-weight: bold
    text-transform: none
    display: block

  header:after
    content: '\2014'
    display: block
    margin: 0px auto
    text-align: center
    color: lighten(turquoise, 40%)
    font-weight: normal
    
  a
    color: white

  p
    margin-bottom: 20px

  h3
    color: white
    font-size: 1.1em
    text-transform: uppercase
    font-weight: bold

    margin-bottom: 20px

  .guidelines
    background: rgba(white, 0.95)
    padding: 10px 20px
    border-radius: 1px
    box-shadow: 0 1px 1px rgba(black, 0.2), 0 0 2px rgba(black, 0.1)
    overflow: hidden
    text-align: center

  .guidelines img
    width: 270px
    height: 94px

  .download a
    margin-top: 5px
    button-color(scarlet, 2px)
    padding: 2px 9px
    font-size: 0.9em

  strong
    color: white

  .in
    padding: 20px
    margin: 0 auto
    max-width: 980px
    clearfix()

  @media screen and (min-width: 600px)
    .in
      padding: 40px 20px

    .column
      width: 33%
      float: left
      box-sizing: border-box
      padding-right: 30px

